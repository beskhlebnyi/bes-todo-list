var task_element = $('#task-<%= @task.id %>');

$('#mainModal').modal('hide');
task_element.html('<%= j render 'task_string', task: @task %>').effect('highlight', { color: 'yellow' }, 1500);

<% if @task.status %>
  task_element.addClass('text-line-through');
<% else %>
  task_element.removeClass('text-line-through');
<% end %>