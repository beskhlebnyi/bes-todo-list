= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .row.justify-content-md-center
      .row
        .col.login-box
          .login-box-header
            h2
              = t(:log_in)
          
          .form-group.mx-sm-3.mb-2
            = f.label :email 
            br
            = f.email_field :email, autofocus: true, autocomplete: 'email', placeholder:'example@domain.com', class:'form-control'

          .form-group.mx-sm-3.mb-2
            = f.label :password
            br 
            = f.password_field :password, autocomplete: 'off', class:'form-control'

          - if devise_mapping.rememberable?
            .form-check
              = f.check_box :remember_me
              |  
              = f.label t(:remember_me)

          .form-group.mx-sm-3.mb-2
            = f.submit t(:log_in), class:'btn btn-outline-primary btn-block submit-login'
            .or          
            = link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class: "btn btn-outline-primary btn-block google"            
          .mx-sm-3.mb-2
            = render 'users/shared/links'
