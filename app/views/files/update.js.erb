var document_element = $('#document-<%= @document.id %>');

$('#mainModal').modal('hide');
document_element.html('<%= j render 'document_string', document: @document %>').effect('highlight', { color: 'yellow' }, 1500);

<% if @document.status %>
  document_element.addClass('text-line-through');
<% else %>
  document_element.removeClass('text-line-through');
<% end %>